<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/default.spacing.vertical"
        android:paddingLeft="@dimen/default.spacing.horizontal"
        android:paddingRight="@dimen/default.spacing.horizontal"
        android:paddingTop="@dimen/default.spacing.vertical">

        <TextView
            android:id="@+id/label_location_requesting"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toggle_location_requesting" />

        <Switch
            android:id="@+id/switch_request_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/label_location_requesting"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/label_coordinates"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_location_requesting"
            android:paddingBottom="@dimen/default.spacing.vertical"
            android:paddingLeft="@dimen/default.spacing.horizontal"
            android:paddingRight="@dimen/default.spacing.horizontal"
            android:paddingTop="@dimen/default.spacing.vertical"
            tools:text="50 x 50" />

        <TextView
            android:id="@+id/label_location"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_coordinates"
            android:paddingBottom="@dimen/default.spacing.vertical"
            android:paddingLeft="@dimen/default.spacing.horizontal"
            android:paddingRight="@dimen/default.spacing.horizontal"
            android:paddingTop="@dimen/default.spacing.vertical"
            tools:text="Earth Hell" />


        <ImageButton
            android:id="@+id/button_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/label_coordinates"
            android:layout_alignTop="@id/label_coordinates"
            android:src="@drawable/google_maps"
            android:visibility="gone" />

        <TextView
            android:id="@+id/label_location_history"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_location"
            android:text="@string/location_history.label" />

        <TextView
            android:id="@+id/location_history_last"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_location_history"
            android:paddingBottom="@dimen/default.spacing.vertical"
            android:paddingLeft="@dimen/default.spacing.horizontal"
            android:paddingRight="@dimen/default.spacing.horizontal"
            android:paddingTop="@dimen/default.spacing.vertical"
            tools:text="50 x 50" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_messages"
            android:layout_below="@id/location_history_last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/default.spacing.horizontal"
        android:background="@drawable/message_fab"
        android:elevation="@dimen/fab.elevation"
        android:src="@drawable/message_text"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:fabSize="normal" />
</android.support.design.widget.CoordinatorLayout>